# 第一阶段：构建阶段 - 使用官方Maven镜像
FROM maven:3.9.4-eclipse-temurin-17 AS builder

WORKDIR C:/app

# 复制pom.xml和源代码
COPY ../server/pom.xml .
COPY ../server/src ./src

# 构建项目
RUN mvn clean package -DskipTests

# 第二阶段：运行阶段 - 使用官方OpenJDK镜像
FROM eclipse-temurin:17

WORKDIR C:/app

# 从构建阶段复制jar文件
COPY --from=builder C:/app/target/erpcrm-server-1.0.0-SNAPSHOT.jar app.jar

# 暴露端口
EXPOSE 8082

# 启动应用
ENTRYPOINT ["java", "-jar", "app.jar"]
