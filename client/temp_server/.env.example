# ERP+CRM系统环境变量配置示例
# 复制此文件为 .env 并填写实际值

# 数据库配置
DB_URL=jdbc:mysql://localhost:3306/erpcrm_db?useSSL=false&serverTimezone=UTC&allowPublicKeyRetrieval=true
DB_USERNAME=root
DB_PASSWORD=your_secure_password_here

# Redis配置
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# JWT密钥
JWT_SECRET=your_jwt_secret_key_here

# WebSocket配置
WEBSOCKET_URL=ws://localhost:8082/ws

# 文件上传配置
UPLOAD_MAX_FILE_SIZE=10MB