# 第一阶段：构建阶段 - 使用Linux Maven镜像
FROM maven:3.9.4-eclipse-temurin-17 AS builder

# 设置工作目录
WORKDIR /app

# 复制pom.xml和源代码 - 使用修复过的server副本
COPY ./server_temp_copy/pom.xml .
COPY ./server_temp_copy/src ./src

# 构建项目
RUN mvn clean package -DskipTests

# 第二阶段：运行阶段 - 使用Linux OpenJDK镜像
FROM eclipse-temurin:17

WORKDIR /app

# 从构建阶段复制jar文件
COPY --from=builder /app/target/erpcrm-1.0-SNAPSHOT.jar app.jar

# 暴露端口
EXPOSE 8080

# 启动应用
ENTRYPOINT ["java", "-jar", "app.jar"]
